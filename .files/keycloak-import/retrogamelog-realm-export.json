{
  "realm": "retrogamelog",
  "enabled": true,
  "displayName": "RetroGameLog",

  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,

  "bruteForceProtected": true,
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,

  "roles": {
    "realm": [
      { "name": "admin", "description": "Platform administrator" },
      { "name": "user", "description": "Regular user" },
      { "name": "moderator", "description": "Content moderator" }
    ]
  },

  "groups": [
    { "name": "Admins", "realmRoles": ["admin"] },
    { "name": "Moderators", "realmRoles": ["moderator"] },
    { "name": "Users", "realmRoles": ["user"] }
  ],

  "clients": [
    {
      "clientId": "retrogamelog-api",
      "name": "RetroGameLog Backend API",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "secret": "CHANGE_ME_API_SECRET",
      "redirectUris": [],
      "webOrigins": [],
      "defaultClientScopes": ["profile", "email"],
      "optionalClientScopes": ["roles"],
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "claim.name": "roles",
            "jsonType.label": "String",
            "access.token.claim": "true",
            "id.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "retrogamelog-frontend",
      "name": "RetroGameLog Frontend",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "redirectUris": ["http://localhost:5173/*"],
      "webOrigins": ["http://localhost:5173"],
      "defaultClientScopes": ["profile", "email"],
      "optionalClientScopes": ["roles"]
    }
  ],

  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Retro",
      "lastName": "Admin",
      "email": "admin@retrogamelog.com",
      "credentials": [
        { "type": "password", "value": "Admin@123", "temporary": false }
      ],
      "realmRoles": ["admin"],
      "groups": ["Admins"]
    }
  ]
}
